{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["jpg", "jpeg"],
        "name": "JPG",
        "role": "Viewer"
      },
      {
        "ext": ["heif"],
        "name": "HEIF",
        "role": "Viewer"
      }
    ]
  },
  "productName": "imagev",
  "version": "0.1.0",
  "identifier": "com.imagev.app",
  "plugins": {
    "process": {
      "active": true
    }
  },
  "app": {
    "security": {
      "csp": "asset: https://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["/**"]
      }
    },
    "windows": [
      {
        "title": "imagev",
        "width": 1000,
        "height": 600,
        "dragDropEnabled": true,
        "resizable": true
      }
    ]
  }
}
